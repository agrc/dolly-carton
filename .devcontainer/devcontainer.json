{
  "build": {
    "context": "..",
    "dockerfile": "../Dockerfile",
    "target": "dev_container"
  },
  "mounts": [
    "source=${localWorkspaceFolder}/output,target=${containerWorkspaceFolder}/output,type=bind,consistency=cached",
    "source=dolly-carton-zsh-history,target=/root/.zsh_history,type=volume"
  ],
  "customizations": {
    "vscode": {
      "extensions": [
        "charliermarsh.ruff",
        "editorconfig.editorconfig",
        "ms-azuretools.vscode-docker",
        "ms-python.python",
        "streetsidesoftware.code-spell-checker",
        "ryanluker.vscode-coverage-gutters"
      ],
      "python": {
        "defaultInterpreterPath": "/usr/local/bin/python"
      },
      "terminal.integrated.defaultProfile.linux": "zsh",
      "terminal.integrated.profiles.linux": {
        "zsh": {
          "path": "/usr/bin/zsh"
        }
      }
    }
  },
  "postCreateCommand": "pip install -e .[tests] --break-system-packages"
}
